	<div id="page">	
		<div data-bind="foreach: recipes" class="listing">
			<img data-bind="attr: {src: image}" style="width:300px;height:300px;">
			<div class="desc">
				<h1 onmouseenter="this.style.color= 'blue'" onmouseleave="this.style.color= 'black'" data-bind="text: label"></h1>
				<p data-bind="foreach: ingredientLines">
					<span data-bind="text: $data"></span>, 
				</p>
			</div>
			<div class="verticalLine"></div>
			<div class="tags">
				<p data-bind="foreach: healthLabels">
					<span data-bind="text: $data"></span>, 
				</p>
			</div>
		</div>
	</div>
</body>
